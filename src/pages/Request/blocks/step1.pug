p(class="heading-title") 
  | 폐기물 유형
  span(class="heading-subtitle") 을 알려주세요.

div(class="row")
  div(class="col")
    q-list(separator)
      q-item(
        class="q-pt-lg q-pb-lg q-pl-none"
        clickable v-ripple 
        v-for="(list, key) in list_waste_type" 
        :key="key" 
        @click="selectedWaste = list.val; $emit('next', true);"
      )
        q-item-section(avatar)
          q-icon()
            img(
              :src="require(`assets/request_estimate-icon/${list.icon1}`)"
            )
        
        q-item-section(style="font-size: 16px; font-family: notosanskr-regular") {{ list.label }}
        
        q-item-section(avatar)
          q-icon()
            img(
              :src="require(`assets/request_estimate-icon/${selectedWaste === list.val ? 'radio-btn-selected.png' : 'radio-btn-unselected.png'}`)"
            )
